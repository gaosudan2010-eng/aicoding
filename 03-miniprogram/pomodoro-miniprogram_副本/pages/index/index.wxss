/* ==================== È°µÈù¢ÂÆπÂô® ==================== */
.page {
  min-height: 100vh;
  padding: 120rpx 40rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: background 0.5s ease;
}

.page.work-mode {
