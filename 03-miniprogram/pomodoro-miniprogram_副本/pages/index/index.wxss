/* ==================== Áï™ËåÑËÆ°Êó∂Âô® ==================== */
.timer-container {
  position: relative;
  width: 560rpx;
  height: 560rpx;
  margin-bottom: 60rpx;
}

/* ËøõÂ∫¶ÁéØ */
.progress-ring {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.progress-ring-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 12rpx solid rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
}

.progress-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* ÊµÅÂä®ÂÖâÁÇπ */
.progress-dot {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  background: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 0 24rpx rgba(255, 255, 255, 0.8), 0 0 48rpx rgba(255, 255, 255, 0.4);
  opacity: 0;
  transform: translate(-50%, -50%);
  transition: opacity 0.3s;
}

.progress-dot.visible {
  opacity: 1;
  animation: dotPulse 1.5s ease-in-out infinite;
}

@keyframes dotPulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.3);
  }
}

/* Áï™ËåÑÂõæÂΩ¢ - CSS ÂÆûÁé∞ */
.tomato {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 75%;
  height: 75%;
}

.tomato-body {
  position: absolute;
  top: 15%;
  left: 8%;
  width: 84%;
  height: 75%;
  background: #FF6B6B;
  border-radius: 50% 50% 50% 50% / 45% 45% 55% 55%;
  box-shadow: 0 24rpx 80rpx rgba(255, 107, 107, 0.4);
  transition: background 0.5s, box-shadow 0.5s;
}

.tomato-rest .tomato-body {
  background: #34C759;
  box-shadow: 0 24rpx 80rpx rgba(52, 199, 89, 0.4);
}

.tomato-highlight {
  position: absolute;
  top: 22%;
  left: 15%;
  width: 28%;
  height: 22%;
  background: rgba(255, 138, 138, 0.5);
  border-radius: 50%;
}

.tomato-highlight-small {
  position: absolute;
  top: 20%;
  left: 12%;
  width: 14%;
  height: 10%;
  background: rgba(255, 181, 181, 0.6);
  border-radius: 50%;
}

.tomato-leaves {
  position: absolute;
  top: 5%;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 20%;
}

.leaf {
  position: absolute;
  width: 40%;
  height: 60%;
  background: #34C759;
  border-radius: 0 80% 0 80%;
}

.leaf-left {
  left: 10%;
  transform: rotate(-30deg);
}

.leaf-right {
  right: 10%;
  transform: rotate(30deg) scaleX(-1);
}

.stem {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 40rpx;
  background: #28A745;
  border-radius: 8rpx;
}

/* Êó∂Èó¥ÊòæÁ§∫ */
