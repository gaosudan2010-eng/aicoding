/* pages/index/index.wxss */

/* 页面背景 */
.page {
  min-height: 100vh;
  padding: 30rpx;
  padding-top: 20rpx;
  transition: background 0.5s ease;
}

/* 背景主题 */
.page.sunny {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 50%, #ffecd2 100%);
}

.page.cloudy {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.page.rainy {
  background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
}

.page.snowy {
  background: linear-gradient(135deg, #e6e9f0 0%, #eef1f5 100%);
}

.page.stormy {
  background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
}

.page.foggy {
  background: linear-gradient(135deg, #bdc3c7 0%, #2c3e50 100%);
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 80rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  font-size: 36rpx;
  padding: 10rpx;
}

.location-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 搜索结果 */
.search-results {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-result-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-result-item:last-child {
  border-bottom: none;
}

.search-result-item:active {
  background: #f5f5f5;
}

.search-result-item .city-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.search-result-item .city-country {
  font-size: 24rpx;
  color: #999;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #fff;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 当前天气卡片 */
.current-weather {
  text-align: center;
  padding: 40rpx;
}

.city-info {
  margin-bottom: 30rpx;
}

.city-info .city-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.city-info .update-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.weather-main {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.weather-icon {
  font-size: 120rpx;
}

.temperature {
  font-size: 120rpx;
  font-weight: 300;
  color: #333;
}

.weather-desc {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.weather-details {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* 7天预报 */
.forecast {
  padding: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.forecast-list {
  display: flex;
  flex-direction: column;
}

.forecast-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.forecast-item:last-child {
  border-bottom: none;
}

.forecast-date {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.forecast-icon {
  width: 80rpx;
  font-size: 40rpx;
  text-align: center;
}

.forecast-temp {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.temp-high {
  font-size: 30rpx;
  font-weight: 500;
  color: #ff6b6b;
}

.temp-low {
  font-size: 30rpx;
  color: #4ecdc4;
}

.forecast-rain {
  font-size: 24rpx;
  color: #4a90d9;
}

/* 温度单位切换 */
.unit-toggle {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 30rpx;
}

.unit-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.unit-btn.active {
  background: rgba(255, 255, 255, 0.95);
  color: #1a73e8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
  color: #fff;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 卡片基础样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

